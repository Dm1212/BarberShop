<table class="table table-striped table-dark">
  <caption>Список записавшихся</caption>
  <thead>
    <tr>
      <th scope="col">Очередь</th>
      <th scope="col">Имя</th>
      <th scope="col">Телефон</th>
      <th scope="col">Дата и время</th>
      <th scope="col">Цвет волос</th>
    </tr>
  </thead>
  <tbody>
    <% @results.each_with_index do |row, i| %>
    <tr>
      <th><%= i+1 %></th>
      <th><%= row['username'] %></th>
      <td><%= row['phone'] %></td>
      <td><%= row['date_stamp'] %></td>
      <td><%= row['color'] %></td>
    </tr>
   <% end %>
  </tbody>
</table>